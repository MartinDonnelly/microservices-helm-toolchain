{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "api-key": {
            "description": "The IBM Cloud API key is used to access the IBM Container Service API and interact with the cluster. You can obtain your API key with 'ibmcloud iam api-key-create' or via the console at https://console.ng.bluemix.net/iam/#/apikeys by clicking **Create API key** (Each API key only can be viewed once).",
            "type": "string",
            "pattern": "\\S"
        },
       "registry-region": {
          "description": "Region for container registry",
          "type": "string"
        },
       "registry-namespace": {
          "description": "Namespace in container registry",
          "type": "string",
          "pattern": "^[a-z0-9][-_a-z0-9]{2,28}[a-z0-9]$"
        },
        "staging-region": {
          "description": "Staging region",
          "type": "string"
        },
        "staging-resource-group": {
          "description": "Staging resource group",
          "type": "string",
          "pattern": "\\S"
        },
       "staging-cluster-name": {
          "description": "Name of staging cluster",
          "type": "string",
          "pattern": "\\S"
        },
        "staging-cluster-namespace": {
          "description": "Namespace in staging cluster",
          "type": "string",
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },
        "prod-region": {
          "description": "Production region",
          "type": "string"
        },
        "prod-resource-group": {
          "description": "Production resource-group",
          "type": "string",
          "pattern": "\\S"
        },              
       "prod-cluster-name": {
          "description": "Name of production cluster",
          "type": "string",
          "pattern": "\\S"
        },
        "prod-cluster-namespace": {
          "description": "Namespace in production cluster",
          "type": "string",
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },    
        "umbrella-app-name": {
          "description": {
              "$ref": "#/messages/deploy.umbrellaAppDescription"
          },
          "type": "string",
          "pattern": "\\S",
          "maxLength": 63
        }
    },
    "required": [
        "api-key",
        "registry-region",
        "registry-namespace",
        "staging-region",
        "staging-resource-group",
        "staging-cluster-name",
        "staging-cluster-namespace",        
        "prod-region",
        "prod-resource-group",
        "prod-cluster-name",
        "prod-cluster-namespace",
        "umbrella-app-name"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/custom_helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.umbrellaAppName"
            },
            "key": "umbrella-app-name"
        },
        {
            "type": "password",
            "readonly": false,
            "title": "IBM Cloud API key",
            "key": "api-key"
        },
        {
            "type": "label",
            "title": ""
        },
        {
            "type": "label",
            "title": "**Container image registry:**"
        },
        {
          "type": "table",
          "columnCount": 3,
            "widths": ["50%", "3%", "47%"],
            "items": [
                {
                  "type": "label",
                  "title": "Container registry region"
                },{
                  "type": "label",
                  "title": ""
                },{                    
                  "type": "label",
                  "title": "Container registry namespace"
                },{
                  "type": "select",
                  "title": "Container registry region",
                  "key": "registry-region"
                },{
                  "type": "label",
                  "title": ""
                },{
                  "type": "text",
                  "readonly": false,
                  "title": "Container registry namespace",
                  "key": "registry-namespace"
                }
            ]
        },    
        {
            "type": "label",
            "title": ""
        },
        {
            "type": "table",
            "columnCount": 9,
            "widths": [ "16%", "1%", "20%", "1%", "20%", "1%", "20%", "1%", "20%" ],
            "items": [
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/environment"
                    }
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterResourceGroup"
                    }
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterName"
                    }
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterNamespace"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/testStage"
                    }
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                  "type": "select",
                  "key": "staging-region"
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                  "type": "select",
                  "key": "staging-resource-group"
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                  "type": "select",
                  "key": "staging-cluster-name",
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                  "type": "text",
                  "key": "staging-cluster-namespace",
                  "readonly": false
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/prodStage"
                    }
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                  "type": "select",
                  "key": "prod-region"
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                  "type": "select",
                  "key": "prod-resource-group"
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                  "type": "select",
                  "key": "prod-cluster-name",
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                  "type": "text",
                  "key": "prod-cluster-namespace",
                  "readonly": false
                }
            ]
        },
        {
          "type": "table",
          "columnCount": 2,
            "widths": ["10%", "85%"],
            "items": [
                {
                  "type": "label",
                  "title": ""
                },{
                  "type": "label",
                  "title": "Retrieve the Kubernetes cluster name with the CLI command 'ibmcloud cs clusters' or via the [console](https://console.bluemix.net/containers-kubernetes/home/clusters)."
                }
            ]
        },{
          "type": "table",
          "columnCount": 2,
            "widths": ["10%", "85%"],
            "items": [
                {
                  "type": "label",
                  "title": ""
                },{
                  "type": "label",
                  "title": "If the cluster namespace doesn't exist already, it will be automatically created and configured."
                }
            ]
        }
    ]
}